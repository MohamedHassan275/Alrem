<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alrem">

    <uses-permission android:name="android.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/me"
        android:label="@string/app_name"
        android:roundIcon="@drawable/me"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activites.CountDownTimerActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".Activites.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Activites.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".Services.HelloServic"
            android:enabled="true" />
    </application>

</manifest>