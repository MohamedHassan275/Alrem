<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activites.HomeActivity">

    <TextView
        android:id="@+id/text_view_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:gravity="center"
        android:text=""
        android:textColor="#000"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boutton_start_rest"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:onClick="start"
            android:text="start"

            />

        <Button
            android:id="@+id/bouton_rest"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:onClick="startrest"

            android:text="rest"
            android:visibility="invisible"
            tools:visibility="visible"

            />
    </LinearLayout>


    <Button
        android:id="@+id/botton2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:onClick="startService"
        android:text="start service" />

    <Button
        android:id="@+id/botton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="5dp"
        android:onClick="stopService"
        android:text="stop service" />

    <Button
        android:id="@+id/botton3"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="5dp"
        android:onClick="startService1"
        android:text="creat service" />


</androidx.appcompat.widget.LinearLayoutCompat>